<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View"
            android:textSize="16sp"
            android:textColor="@color/gray"
    />

    <RadioGroup
            android:id="@+id/view_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_view_list"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_view_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="List"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_view_tile"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_view_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tile"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>
    </RadioGroup>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="16sp"
            android:textColor="@color/gray"
    />

    <RadioGroup
            android:id="@+id/sort_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_name"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_by_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File name"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_size"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_by_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File size"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_type"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_by_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File type"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_date"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_by_changed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change date"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_date"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_by_created"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create date"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>
    </RadioGroup>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="8dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textSize="16sp"
            android:textColor="@color/gray"
    />

    <RadioGroup
            android:id="@+id/sort_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_ascending"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_ascending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Asc"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            <ImageView
                    android:layout_width="@dimen/radio_icon_size"
                    android:layout_height="@dimen/radio_icon_size"
                    android:src="@drawable/ic_sort_descending"
                    android:tint="@color/lightGray"
                    android:layout_marginEnd="8dp"/>

            <RadioButton
                    android:id="@+id/rb_sort_descending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desc"
                    android:button="@null"
                    android:theme="@style/MyRadioTheme"/>
        </LinearLayout>
    </RadioGroup>
</LinearLayout>
